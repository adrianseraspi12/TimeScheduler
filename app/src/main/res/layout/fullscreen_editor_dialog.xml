<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/create_schedule_menu"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardElevation="@dimen/dimens_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/create_schedule_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@string/back"
                android:padding="@dimen/dimens_xlarge"
                android:src="@drawable/back_arrow" />

            <TextView
                android:id="@+id/create_schedule_title"
                style="@style/Base.DialogWindowTitle.AppCompat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dimens_xlarge"
                android:layout_toEndOf="@id/create_schedule_back"
                android:layout_toStartOf="@id/editor_save"
                android:text="@string/create_schedule"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/editor_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/dimens_xlarge"
                android:text="@string/save"
                android:textColor="@android:color/white" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/create_schedule_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimens_medium"
        android:layout_marginStart="@dimen/dimens_xlarge"
        android:layout_marginTop="@dimen/dimens_xlarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_schedule_menu">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/create_schedule_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name"
            android:inputType="text" />

    </android.support.design.widget.TextInputLayout>


    <TableRow
        android:id="@+id/create_schedule_day_pick_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimens_medium"
        android:layout_marginStart="@dimen/dimens_xlarge"
        android:layout_marginTop="@dimen/dimens_medium"
        android:weightSum="7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_schedule_text_layout">

        <TextView
            android:id="@+id/editor_sunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimens_large"
            android:layout_weight="1"
            android:background="@drawable/rounded_corner_background"
            android:gravity="center"
            android:padding="@dimen/dimens_medium"
            android:text="@string/s"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/editor_monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimens_large"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dimens_medium"
            android:text="@string/m"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/editor_tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimens_large"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dimens_medium"
            android:text="@string/t"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/editor_wednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimens_large"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dimens_medium"
            android:text="@string/w"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/editor_thursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimens_large"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dimens_medium"
            android:text="@string/t"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/editor_friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimens_large"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dimens_medium"
            android:text="@string/f"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/editor_saturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dimens_medium"
            android:text="@string/s"
            android:textColor="@android:color/black" />

    </TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimens_medium"
        android:layout_marginStart="@dimen/dimens_xlarge"
        android:layout_marginTop="@dimen/dimens_medium"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_schedule_day_pick_layout">

        <TextView
            android:id="@+id/editor_notif_sound"
            style="@style/Base.Widget.AppCompat.Spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:drawablePadding="@dimen/dimens_medium"
            android:drawableStart="@drawable/notif_bell"
            android:padding="@dimen/dimens_medium"
            android:text="@string/cesium"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/editor_time"
            style="@style/Base.Widget.AppCompat.Spinner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/dimens_medium"
            android:text="@string/time"
            android:textColor="@android:color/black" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>